{
    "source": 
    {
        "include": ["src", "package.json", "README.md", "LICENSE"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },

    "plugins": ["plugins/markdown"],

    "opts": 
    {
        "encoding": "utf8",
        "readme": "./README.md",
        "destination": "docs/",
        "recurse": true,
        "verbose": true,
        "template": "./node_modules/clean-jsdoc-theme",
        "theme_opts": 
        {
            "theme": "dark",
            "title": "IRPayments Documents",
            "menu": [
                {
                    "title": "NPM Package",
                    "link": "https://npmjs.com/package/irpayments",
                    "target": "_blank"
                },
                {
                    "title": "Github",
                    "link": "https://github.com/EhsanFox/IRPayments",
                    "target": "_blank"
                },
                {
                    "title": "Ehsan's Website",
                    "link": "https://ehsan.js.org/",
                    "target": "_blank"
                }
            ],
            "sections": ["Classes", "Global", "Menu"],
            "footer": "Made with ðŸ’– By Ehsan"
        }
    }
}